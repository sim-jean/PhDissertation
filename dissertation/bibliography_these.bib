   month = {1},
   pages = {270-289},
   title = {A bioeconomic analysis of an emerald ash borer invasion of an urban forest with multiple jurisdictions},
   volume = {36},
   url = {https://www.researchgate.net/publication/259996222_A_Bioeconomic_Analysis_of_an_Emerald_Ash_Borer_Invasion_of_an_Urban_Forest_with_Multiple_Jurisdictions},
   year = {2014},
   keywords={base}
}
