}
@article{Endres1999,
   abstract = {We focus on the effects of deforestation for agricultural purposes on biodiversity. This topic has been dealt with in the recent literature where “forested land” and “biodiversity” are treated as synonyms. In contrast to that, this paper distinguishes between “forested land” and “forest” itself, the latter being interpreted as a measure of biodiversity. The regenerative capacity of forests is modeled as a function of the own stock and of the habitat size. In particular, the threat of a given minimum viable population to be achieved in the course of the reduction of habitats is taken into account. The corresponding structure of a sustainability indicator is elaborated.},
   author = {Alfred Endres and Volker Radke},
