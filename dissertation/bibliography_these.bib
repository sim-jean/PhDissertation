@article{Li1998,
   abstract = {This paper attempts to develop a dynamic model of optimal biodiversity preservation in a stylized ecosystem. Species richness (number of species) is used as a measure of diversity and its interactions with the resource stock, consumptive extraction and preservation efforts are explored using a two-state variable optimal control model. The analysis extends to the implications of a random threshold in species richness and the relationship between ecological and economic stability conditions. Dynamic paths and equilibrium characteristics are illustrated using numerical techniques.},
   author = {Chuan-Zhong Li and Karl-Gustaf Löfgren},
