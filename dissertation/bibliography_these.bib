}
@article{Onal1997,
   abstract = {A measure of divergence (NAD) between the distribution of individuals in a community and a target distribution is presented. When the latter is uniform, NAD measures evenness and exhibits a strong correlation with the widely used Shannon index. However, NAD offers the capability to incorporate an arbitrary composition in an economic optimization model where the Shannon index is not applicable. An empirical application to optimum management of a multi species forest is presented, and the trade-off between ecological and economic objectives is investigated.},
   author = {Hayri Onal},
   journal = {American Journal of Agricultural Economics},
   title = {Trade-off between Structural Diversity and Economic Objectives in Forest Management},
