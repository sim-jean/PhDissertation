   publisher = {Walter de Gruyter GmbH},
   title = {Optimal Regulation of Invasive Species Long-Range Spread: A General Equilibrium Approach},
   volume = {15},
   url = {https://www.researchgate.net/publication/283083637_Optimal_Regulation_of_Invasive_Species_Long-Range_Spread_A_General_Equilibrium_Approach},
   year = {2015},
