   journal = {Oxford Economic Papers},
   pages = {800-821},
   title = {The Economics of Extinction Revisited and Revised: A Generalised Framework for the Analysis of the Problems of Endangered Species and Biodiversity Losses},
   volume = {46},
   year = {1994},
